@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
	<div class="mt-3">
		<label class="from-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>

	<div class="mt-3">
		<label class="from-label">Email</label>
		<input type="email" class="form-control" asp-for="Email" />
	</div>

	<div class="mt-3">
		<label class="from-label">Phone</label>
		<input type="text" class="form-control" asp-for="Phone" />
	</div>

	<div class="mt-3">
		<input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
		<label class="form-check-label" for="Subscribed">Subscribe</label>
	</div>

	<div class="mt-3">
		<label type="submit" class="btn btn-primary">Save</label>
	</div>
</form>